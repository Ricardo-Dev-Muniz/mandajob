<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="All">

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:background="@color/colorDark">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_project_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@android:color/transparent"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_new_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="190dp"
                    android:minHeight="120dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_wallpaper_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorDark080"
                        android:elevation="0dp"
                        android:visibility="visible"
                        app:cardCornerRadius="7.4dp"
                        app:cardElevation="0dp">

                        <ProgressBar
                            android:id="@+id/progress_image_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/iv_item_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_img_profile_responses"
                            android:maxHeight="120dp"
                            android:minWidth="190dp"
                            android:scaleType="centerCrop"
                            android:src="@null"
                            tools:ignore="ContentDescription"
                            tools:minHeight="120dp"
                            tools:minWidth="190dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_profile_image_card_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_new_one"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_content_image_home"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="@android:color/transparent"
                        android:elevation="0dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_profile_image_home"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorDarkLow"
                            android:scaleType="centerCrop"
                            android:src="@null" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/shape_card_date"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/tv_locale_quilometers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_light"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.04"
                            android:lineSpacingExtra="0dp"
                            android:text="one week"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            android:visibility="visible" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_profile_image_card_home"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_item_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/pt_sans"
                        android:includeFontPadding="true"
                        android:letterSpacing="0.02"
                        android:maxLines="1"
                        android:text="Yuta Mon"
                        android:textColor="@color/colorLight010"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginTop="0.1dp"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@color/colorSecondary"
                            android:elevation="0dp"
                            app:cardCornerRadius="1.6dp"
                            app:cardElevation="0dp">

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/nunito_light"
                            android:includeFontPadding="true"
                            android:letterSpacing="0.02"
                            android:maxLines="1"
                            android:text="Design"
                            android:textColor="@color/colorLight030"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>